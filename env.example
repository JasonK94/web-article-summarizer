# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
PROVIDER=openai

# Summary Profile (researcher, investor, executive, student)
SUMMARY_PROFILE=investor

# Chrome Configuration (Windows)
CHROME_USER_DATA=C:/Users/USER/AppData/Local/Google/Chrome/User Data
CHROME_PROFILE=Default

# Output Configuration
OUTPUT_FORMAT=markdown
# Options: "markdown" or "csv"

# Browser Configuration
USE_TEMP_PROFILE=true
# Set to false to use your Chrome profile (requires Chrome to be closed)

# Gemini (Google) optional
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro

# Alternative Chrome paths for different systems:
# macOS: /Users/USER/Library/Application Support/Google/Chrome
# Linux: /home/USER/.config/google-chrome