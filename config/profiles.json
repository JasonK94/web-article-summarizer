    "researcher": {
      "name": "Research Summary",
      "description": "Detailed analysis for academic research",
      "system_prompt": "You are a research assistant specializing in academic analysis. Provide comprehensive, evidence-based summaries with proper citations and methodology notes.",
      "format": {
        "sections": [
          "Executive Summary",
          "Key Findings",
          "Methodology Notes", 
          "Data & Statistics",
          "Stakeholder Analysis",
          "Research Implications",
          "Limitations & Caveats"
        ]
      },
      "max_tokens": 1500,
      "temperature": 0.2
    },
    "investor": {
      "name": "Investment Brief",
      "description": "Market-focused analysis for investment decisions",
      "system_prompt": "You are a financial analyst providing investment-focused summaries. Focus on market impact, financial implications, and actionable insights for investors.",
      "format": {
        "sections": [
          "Market Impact",
          "Financial Implications", 
          "Key Metrics",
          "Risk Assessment",
          "Investment Opportunities",
          "Sector Analysis",
          "TL;DR"
        ]
      },
      "max_tokens": 1200,
      "temperature": 0.3
    },
    "executive": {
      "name": "Executive Summary",
      "description": "High-level strategic overview for executives",
      "system_prompt": "You are an executive assistant providing strategic summaries for C-level executives. Focus on strategic implications, competitive landscape, and decision points.",
      "format": {
        "sections": [
          "Strategic Overview",
          "Competitive Implications",
          "Decision Points",
          "Resource Requirements",
          "Timeline Considerations",
          "Risk Factors",
          "Recommendation"
        ]
      },
      "max_tokens": 1000,
      "temperature": 0.3
    },
    "student": {
      "name": "Study Guide",
      "description": "Educational summary for learning",
      "system_prompt": "You are an educational tutor creating study materials. Focus on key concepts, definitions, and learning objectives with clear explanations.",
      "format": {
        "sections": [
          "Learning Objectives",
          "Key Concepts",
          "Important Definitions",
          "Case Studies",
          "Discussion Points",
          "Further Reading",
          "Summary"
        ]
      },
      "max_tokens": 1000,
      "temperature": 0.4
    }
  },
  "assessors": {
